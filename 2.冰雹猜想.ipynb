    "def collatz(number):\n",
    "  res=number%2\n",
    "  if res==0:\n",
    "    return number//2\n",
    "  else:\n",
    "    return number*3+1\n",
    " \n",
    " \n",
    "print('请输入一个正整数:',end='')\n",
    "num=int(input())\n",
    "sum=collatz(num)\n",
    "print(sum)\n",
    " \n",
    "while sum!=1:\n",
    "  sum=collatz(sum)\n",
    "  print(sum)"
